@page "{trainingId:int}/{employeeId:int}"
@model ZelisTrainingRazorWebApp.Pages.Trainees.EditModel

<h2>Edit Trainee</h2>

<form method="post">
    <label asp-for="trainee.TrainingId">Training ID:</label>
    <input asp-for="trainee.TrainingId" class="form-control" readonly />
    <hr />
    <label asp-for="trainee.EmpId">Employee ID:</label>
    <input asp-for="trainee.EmpId" class="form-control" readonly />
    <hr />
    <label asp-for="trainee.Status">Status (C/N):</label>
    <input asp-for="trainee.Status" class="form-control" maxlength="1" />
    <hr />
    <input type="submit" value="Update" class="btn btn-primary" />
</form>

<a href="/Trainees/Index">Back to List</a>
