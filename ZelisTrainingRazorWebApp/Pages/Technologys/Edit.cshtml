@page "{id}"
@model ZelisTrainingRazorWebApp.Pages.Technologys.EditModel

<h2>Edit Technology</h2>
<form method="post">
    <label asp-for="technology.Name">Name:</label>
    <input asp-for="technology.Name" class="form-control" />
    <hr>
    <label asp-for="technology.Level">Level:</label>
    <input asp-for=technology.Level" class="form-control" />
    <hr>
    <label asp-for="technology.Duration">Duration:</label>
    <input asp-for="technology.Duration" class="form-control" />
    <hr />
    <input type="submit" value="Save" class="btn btn-success" />
</form>
